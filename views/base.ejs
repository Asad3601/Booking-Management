<!-- Booking Start -->
<div class="container-fluid booking mt-5 pb-5">
    <div class="container pb-5">
        <div class="bg-light shadow" style="padding: 40px;">
            <div class="row align-items-center justify-content-center" style="min-height: 60px;">
                <div class="col-12">
                    <form action="/search_tours" method="post">
                        <div class="row">
                            <!-- Location Input -->
                            <div class="col-3">
                                <div class="d-flex flex-column align-items-center mb-3">
                                    <strong>
                                    <i class="fa fa-map-marker-alt mb-2"></i>   Location
                                </strong>
                                    <input type="text" class="form-control mt-2" name="destination" placeholder="Where You Want To Go?" />
                                </div>
                            </div>

                            <!-- Date Input -->
                            <div class="col-3">
                                <div class="d-flex flex-column align-items-center mb-3">
                                    <strong>
                                    
                                    <i class="fa fa-calendar  mb-2"></i>  From Date</strong>
                                    <input type="date" name="from_date" class="form-control  mt-2" />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="d-flex flex-column align-items-center mb-3">
                                    <strong>
                                    
                                    <i class="fa fa-calendar  mb-2"></i>  To Date</strong>
                                    <input type="date" name="to_date" class="form-control  mt-2" />
                                </div>
                            </div>

                            <!-- Price Input -->
                            <div class="col-3">
                                <div class="d-flex flex-column align-items-center mb-3">
                                    <strong>
                                    <i class="fa fa-dollar-sign mb-2"></i> Price Range
                                </strong>
                                    <select class="form-control mt-2" name="price">
                                    <option value="">Select Price</option>
                                    <option value="50-200">50$-200$</option>
                                    <option value="200-400">200$-400$</option>
                                    <option value="400-500">400$-500$</option>
                                    <option value="500-750">500$-750$</option>
                                    <option value="750-1000">750$-1000$</option>
                                    <option value="1000">1000$ Above</option>
                                </select>
                                </div>
                            </div>

                        </div>

                        <!-- Submit Button -->
                        <div class="row mt-4 justify-content-center">
                            <div class="col-2">
                                <div class="d-flex flex-column align-items-center">
                                    <button class="btn btn-primary btn-block" type="submit" style="height: 47px; margin-top: -12px;">
                                    <i class="fa fa-search"></i> Search
                                </button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Booking End -->


